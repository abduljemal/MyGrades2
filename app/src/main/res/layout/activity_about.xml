<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gridient"
    tools:context=".About">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="My Grades"
        android:textSize="30sp"
        android:textColor="@color/white" />
    <TextView
        android:layout_alignParentBottom="true"
        android:id="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Version 1.0"
        android:textAlignment="center"
        android:textColor="@color/white" />
    <TextView
        android:layout_above="@id/textView4"
        android:textColor="@color/white"
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="15sp"
        android:layout_marginBottom="92dp"
        android:text="My Grades is used to view result \n from srs outside of jimma university's network"
        android:textAlignment="center" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_above="@id/textView3"
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:drawableStart="@drawable/telegram"
        android:drawablePadding="10dp"
        android:onClick="gotoTelegram"
        android:text="Download and update will available at\nt.me/mygrades"
        android:textColor="@color/white" />

    <ImageView
        android:layout_above="@id/textView2"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/logo" />

</RelativeLayout>